---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'AT&T', url: 'https://att.com' },
  { name: 'T-Mobile', url: 'https://t-mobile.com' },
  {
    name: 'Verizon',
    url: 'https://verizon.com',
  },
  { name: 'Network Resellers', url: 'https://en.wikipedia.org/wiki/Mobile_virtual_network_operator' },
  {
    name: 'ROGERS Canada',
    url: 'https://www.rogers.com/',
  },
  { name: 'Bouygues FR', url: 'https://www.bouyguestelecom.fr/' },
  { name: 'Reliance Jio IN', url: 'https://www.jio.com/' },
  { name: 'Swisscom CH', url: 'https://www.swisscom.ch/en/residential/mobile-subscription.html'},
  { name: 'MonacoTelecom MC', url: 'https://www.monaco-telecom.mc/'},
  { name: 'And so many more international carriers.'}
];
---

<Layout
  title='Home'
  pageTitle='PhonePlan.Report |Â Home'
  description='Honest Phone Plan & Carrier Reviews since 2024.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About PhonePlan.Report</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              Truly Honest Reviews <a
                class='text-white'
                href='/blog/'>about your carrier.</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              With consumer experience in mind.
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the latest! &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            We review
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Paid Promo lies? Nope.
          </h2>
          <p class='poppins'>
            We follow a strict <strong>Honest Review Policy</strong>, which means if we were to be offered a paid promotion (which is rare), you will see listed "Paid Promo" at the top. We can guarentee that all our reviews are still our honest unbiased opinion.  If we do not agree with a paid promotion request, we will not follow through.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
